{
    "name": "Claude Code Configuration",
    "version": "1.0.0",
    "description": "Safe configuration for Claude Code with restricted dangerous operations",
    "permissions": {
        "file_operations": {
            "read": true,
            "write": true,
            "create": true,
            "delete": false,
            "move": false,
            "copy": true
        },
        "directory_operations": {
            "list": true,
            "create": true,
            "delete": false,
            "navigate": true
        },
        "terminal_access": {
            "enabled": true,
            "allowed_commands": [
                "npm",
                "yarn",
                "node",
                "python",
                "pip",
                "git",
                "dotnet",
                "powershell -Command",
                "Get-*",
                "Set-Location",
                "dir",
                "ls",
                "cat",
                "type",
                "echo",
                "code"
            ],
            "blocked_commands": [
                "rm -rf",
                "del /s",
                "format",
                "fdisk",
                "diskpart",
                "reg delete",
                "shutdown",
                "restart",
                "taskkill",
                "net user",
                "icacls",
                "takeown",
                "runas",
                "psexec"
            ]
        },
        "network_access": {
            "enabled": true,
            "allowed_domains": [
                "github.com",
                "npmjs.com",
                "pypi.org",
                "nuget.org",
                "stackoverflow.com",
                "docs.microsoft.com",
                "developer.mozilla.org"
            ],
            "allow_package_downloads": true,
            "allow_git_operations": true
        },
        "code_analysis": {
            "read_source_code": true,
            "analyze_dependencies": true,
            "suggest_improvements": true,
            "refactor_code": true
        },
        "project_management": {
            "create_files": true,
            "edit_files": true,
            "manage_dependencies": true,
            "run_build_scripts": true,
            "run_tests": true
        }
    },
    "restrictions": {
        "system_access": {
            "modify_system_files": false,
            "access_sensitive_directories": false,
            "modify_registry": false,
            "install_system_software": false
        },
        "security": {
            "execute_unsigned_code": false,
            "modify_security_settings": false,
            "access_credentials": false,
            "bypass_user_permissions": false
        },
        "file_restrictions": {
            "blocked_extensions": [
                ".exe",
                ".msi",
                ".bat",
                ".cmd",
                ".scr",
                ".pif",
                ".reg"
            ],
            "blocked_directories": [
                "C:\\Windows",
                "C:\\Program Files",
                "C:\\Program Files (x86)",
                "C:\\Users\\*\\AppData\\Roaming\\Microsoft\\Windows\\Start Menu",
                "C:\\ProgramData"
            ]
        }
    },
    "safety_features": {
        "require_confirmation_for": [
            "large_file_operations",
            "bulk_deletions",
            "system_command_execution",
            "external_api_calls"
        ],
        "auto_backup": {
            "enabled": true,
            "backup_before_major_changes": true,
            "max_backup_files": 10
        },
        "logging": {
            "enabled": true,
            "log_level": "info",
            "log_file": "claude-code.log"
        }
    },
    "workspace_settings": {
        "default_language": "javascript",
        "auto_save": true,
        "format_on_save": true,
        "lint_on_save": true
    }
}